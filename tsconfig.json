{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/types/express-augmentation.d.ts",
    "src/swagger/index.ts",
    "src/swagger/swagger-autogen.d.ts",
    ".env.modules.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
